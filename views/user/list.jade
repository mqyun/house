- if (houseList.length > 0)
  .note_list
    ul
      each houseitem in houseList
        li.pd_r150
          .pic
            img(src= houseitem.url)
          .con
            a(href='/housedetail/' + houseitem.id)
              h3 查看详情 >>>
            .user
              span 类型：
                font #{houseitem.type==0?'出租':'出售'}
              - if (houseitem.shenhe == 0)
                label 审核状态：未审核
              - else if (houseitem.shenhe == 1)
                label 审核状态：审核通过
              - else
                label 审核状态：审核未通过，请重新上传信息
            .user
              span 户型：#{houseitem.huxing}
              label 地段：#{houseitem.diduan}
            .user
              span 朝向：#{houseitem.chaoxiang}
              label 面积：#{houseitem.mianji} 平方米
            .user
              - if (houseitem.type == 0)
                span 租住类型：#{houseitem.zuzhutype}
              label 价格：#{houseitem.price} 元
          .operation
            - if (houseitem.shenhe == 0 || houseitem.shenhe == 2)
              a.edit-houseinfo(data-houseid= houseitem.id, href='javascript:;')
                i.edit_ico
                | 修改
            a.delete-house(data-houseid= houseitem.id, href='javascript:;')
              i.del_ico
              | 删除
- else
  .no-datacon
    .no-data
      img(src='/public/img/no-data.png')
